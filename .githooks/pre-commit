#!/bin/bash
# ============================================
# Pre-Commit Hook - Privacy Shield
# ============================================
# Blocks commits containing exposed secrets
# Part of the AI Agent Workflow system
# ============================================

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo "ğŸ›¡ï¸  Privacy Shield: Scanning for secrets..."

# Secret patterns to detect
PATTERNS=(
    "AIza[A-Za-z0-9_-]{35,}"              # Google API keys
    "sk-[A-Za-z0-9]{20,}"                  # OpenAI keys
    "ghp_[A-Za-z0-9]{36,}"                 # GitHub Personal Access Tokens
    "gho_[A-Za-z0-9]{36,}"                 # GitHub OAuth tokens
    "github_pat_[A-Za-z0-9_]{22,}"         # GitHub fine-grained tokens
)

# Check staged files
FOUND_SECRETS=0

for pattern in "${PATTERNS[@]}"; do
    if git diff --cached | grep -E "$pattern" > /dev/null; then
        FOUND_SECRETS=1
        echo -e "${RED}âš ï¸  SECURITY ALERT: Potential secret detected!${NC}"
        echo -e "${YELLOW}Pattern: ${pattern}${NC}"
        echo ""
        echo "Matching lines:"
        git diff --cached | grep -E "$pattern" --color=always
        echo ""
    fi
done

if [ $FOUND_SECRETS -eq 1 ]; then
    echo -e "${RED}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
    echo -e "${RED}â•‘  COMMIT BLOCKED - SECRETS DETECTED        â•‘${NC}"
    echo -e "${RED}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
    echo ""
    echo "Action required:"
    echo "  1. Remove the exposed secrets from your code"
    echo "  2. Use environment variables instead"
    echo "  3. Add secrets to .gitignore if in config files"
    echo ""
    echo "For this project:"
    echo "  - API keys should be entered via Settings UI"
    echo "  - Store as: const API_KEY = ''; // User sets via UI"
    echo ""
    echo "To bypass this check (NOT RECOMMENDED):"
    echo "  git commit --no-verify"
    echo ""
    exit 1
fi

echo -e "${GREEN}âœ… No secrets detected - commit approved${NC}"
exit 0
