{
  // ============================================
  // FORMATTER CONFIGURATION
  // ============================================
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // ============================================
  // PRETTIER CONFIGURATION
  // ============================================
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.semi": true,

  // ============================================
  // ESLINT CONFIGURATION
  // ============================================
  "eslint.validate": ["javascript", "javascriptreact"],
  "eslint.format.enable": true,

  // ============================================
  // MCP SERVER CONFIGURATION
  // ============================================
  "mcp.autoStartServers": true,
  "mcp.serverStartupDelay": 1000,

  // ============================================
  // GITHUB COPILOT OPTIMIZATION
  // ============================================
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "javascript": true,
    "html": true,
    "css": true,
    "json": true
  },
  "github.copilot.editor.enableAutoCompletions": true,

  // ============================================
  // COPILOT CHAT CONFIGURATION
  // ============================================
  "github.copilot.chat.enabled": true,
  "github.copilot.chat.acceptanceRecommendations.enabled": true,
  "github.copilot.chat.tools.memory.enabled": true,
  "github.copilot.chat.tools.codebase.enabled": true,
  "github.copilot.chat.tools.terminalLog.enabled": true,
  "github.copilot.chat.tools.importStatements.enabled": true,
  "github.copilot.chat.tools.projectLabels.enabled": true,

  // ============================================
  // GITHUB INTEGRATION
  // ============================================
  "github.repositories.showAllBranches": true,
  "github.repositories.refresh.enabled": true,
  "github.repositories.refresh.interval": 30,
  "github.gitAuthentication": true,
  "github.gitProtocol": "https",
  "github.showPullRequestNumberInTitle": true,

  // ============================================
  // COPILOT CONTEXT & INDEXING
  // ============================================
  "copilot.advanced": {
    "agent.indexing.enabled": true,
    "indexing.projectFileSizeLimit": 5242880,
    "indexing.maxConcurrentIndexingRequests": 4,
    "indexing.excludePatterns": ["**/node_modules", "**/.git", "**/dist", "**/build", "**/.next"]
  },

  // ============================================
  // FILE ASSOCIATIONS & WATCHING
  // ============================================
  "files.associations": {
    "*.md": "markdown",
    ".github/copilot-instructions.md": "markdown",
    ".env.example": "dotenv",
    ".env": "dotenv"
  },

  // Auto Save for Better Workflow
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // Exclude unnecessary files from watcher (improves performance)
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.DS_Store": true
  },

  // ============================================
  // SEARCH & LINTING
  // ============================================
  "search.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/.git": true,
    "**/.DS_Store": true
  },

  // JavaScript/HTML Validation
  "javascript.validate.enable": true,
  "html.validate.scripts": true,
  "html.validate.styles": true,

  // ============================================
  // GIT INTEGRATION
  // ============================================
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.hovers.currentLine.enabled": true,

  // ============================================
  // TERMINAL
  // ============================================
  "terminal.integrated.env.osx": {
    "PROJECT_ROOT": "${workspaceFolder}"
  },
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.4,

  // ============================================
  // EDITOR FEATURES & PERFORMANCE
  // ============================================
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "selection",
  "editor.minimap.enabled": false,

  // ============================================
  // ACCESSIBILITY & THEMES
  // ============================================
  "editor.lineNumbers": "on",
  "editor.renderLineNumbers": "on",
  "editor.showUnused": true,
  "editor.showDeprecated": true,

  // ============================================
  // NODE.JS DEBUGGING
  // ============================================
  "debug.node.showUseWslIsDeprecatedWarning": false,

  // ============================================
  // WORKSPACE INDEXING & SEMANTIC SEARCH
  // ============================================
  "search.smartCase": true,
  "search.useGlobalIgnoreFiles": true,
  "search.useParentIgnoreFiles": true,
  "search.useRipgrep": true,
  "search.maintainFileSearchCache": true,

  // ============================================
  // COPILOT CHAT ADVANCED SETTINGS
  // ============================================
  "chat.commandRunnerEnabled": true,
  "chat.editor.fontSize": 13,
  "chat.editor.fontFamily": "'JetBrains Mono', 'Monaco', monospace",
  "debug.showSubSessionsInToolBar": true,
  "chat.customAgentInSubagent.enabled": true,
  "npm-intellisense.packageSubfoldersIntellisense": true
}
